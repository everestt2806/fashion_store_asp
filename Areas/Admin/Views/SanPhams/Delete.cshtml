@model FashionStore.Models.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #4e73df, #224abe);
        padding: 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
    }

        .page-header h2 {
            color: white;
            margin: 0;
            font-size: 1.75rem;
        }

    .breadcrumb {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
    }

    .breadcrumb-item a {
        color: #4e73df;
        text-decoration: none;
    }

    .detail-label {
        font-weight: 600;
        color: #4e73df;
        margin-bottom: 0.5rem;
    }

    .detail-value {
        margin-bottom: 1.5rem;
    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h2><i class="fas fa-trash-alt me-2"></i>&nbsp Xóa sản phẩm</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/Admin/Home/Index" class="text-decoration-none">
                            <i class="fas fa-home me-1"></i>&nbsp Trang chủ
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Admin/SanPhams" class="text-decoration-none">
                            <i class="fas fa-box me-1"></i>&nbsp Sản phẩm
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        <i class="fas fa-trash-alt me-1"></i>&nbsp Xóa sản phẩm
                    </li>
                </ol>
            </nav>

            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>&nbsp Bạn có chắc chắn muốn xóa sản phẩm này?
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.LoaiHang.TenLoai)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.LoaiHang.TenLoai)</div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.NhaCungCap.TenNCC)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.NhaCungCap.TenNCC)</div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.TenSP)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.TenSP)</div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.GiaBan)</div>
                        <div class="detail-value">@String.Format("{0:0,0}", Model.GiaBan) VNĐ</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.SoLuong)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.SoLuong)</div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.MoTa)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.MoTa)</div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.AnhSP)</div>
                        <div class="detail-value">
                            @if (!string.IsNullOrEmpty(Model.AnhSP))
                            {
                                <img src="/Images/@Model.AnhSP" class="img-thumbnail" style="max-width: 200px;" />
                            }
                            else
                            {
                                <p class="text-muted">Không có ảnh</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4 d-flex gap-3">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash-alt me-2"></i>&nbsp Xác nhận xóa
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-light btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>&nbsp Trở về
                    </a>
                </div>
            }
        </div>
    </div>
</div>
