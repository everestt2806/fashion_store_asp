@model FashionStore.Models.LoaiHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <h2><i class="fas fa-edit me-2"></i>&nbsp Sửa loại hàng</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/Admin" class="text-decoration-none">
                            <i class="fas fa-home me-1"></i>&nbsp Trang chủ
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Admin/LoaiHangs" class="text-decoration-none">
                            <i class="fas fa-tags me-1"></i>&nbsp Loại hàng
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        <i class="fas fa-edit me-1"></i>&nbsp Sửa loại hàng
                    </li>
                </ol>
            </nav>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MaLoai)

                <div class="row">
                    <div class="col-md-6">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="mb-3">
                            @Html.LabelFor(model => model.TenLoai, "Tên loại hàng", new { @class = "form-label" })
                            @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>&nbsp Lưu thay đổi
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-light btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>&nbsp Trở về
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('form').submit(function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}
