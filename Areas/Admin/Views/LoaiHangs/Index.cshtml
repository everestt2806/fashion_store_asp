@model IEnumerable<FashionStore.Models.LoaiHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenLoai", rowsPerPage: 5);
}

<div class="container-fluid">
    <div class="page-header">
        <h2><i class="fas fa-tags me-2"></i>&nbsp Quản lý loại hàng</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/Admin/Home/Index" class="text-decoration-none">
                            <i class="fas fa-home me-1"></i>&nbsp Trang chủ
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        <i class="fas fa-tags me-1"></i>&nbsp Loại hàng
                    </li>
                </ol>
            </nav>

            <div class="mb-3">
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>&nbsp Thêm loại hàng mới
                </a>
            </div>

            <div class="table-responsive">
                @grid.GetHtml(
                    tableStyle: "table table-hover table-bordered custom-table",
                    headerStyle: "bg-primary text-white fw-bold",
                    alternatingRowStyle: "alternating-row",
                    columns: grid.Columns(
                        grid.Column("TenLoai", "Tên Loại", style: "align-middle"),
                        grid.Column(header: "Thao tác",
                            format: @<text>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.MaLoai })" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>&nbsp Sửa
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.MaLoai })" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i>&nbsp Chi tiết
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.MaLoai })" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>&nbsp Xóa
                                        </a>
                                    </div>
                            </text>, style: "text-center align-middle")
             )
         )
            </div>
        </div>
    </div>
</div>

<style>

    .custom-table th {
        color: white !important;
    }

        .custom-table th a {
            color: white !important;
        }

    .table.table-hover.table-bordered th,
    .table.table-hover.table-bordered thead tr th {
        color: white !important;
        font-weight: bold !important;
    }
    .page-header {
        background: linear-gradient(135deg, #4e73df, #224abe);
        padding: 1.5rem;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
    }

        .page-header h2 {
            color: white;
            margin: 0;
            font-size: 1.75rem;
        }

    .breadcrumb {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
    }

    .breadcrumb-item a {
        color: #4e73df;
    }

    .table {
        margin-bottom: 0;
    }

        .table th {
            background-color: #4e73df !important;
        }

    .alternating-row {
        background-color: rgba(0,0,0,.05);
    }

    .btn-group .btn {
        margin: 0 2px;
    }

    .webgrid-footer {
        padding: 1rem 0;
        text-align: center;
    }

        .webgrid-footer a {
            padding: 0.5rem 1rem;
            margin: 0 0.25rem;
            background: #4e73df;
            color: white;
            border-radius: 0.25rem;
            text-decoration: none;
        }

            .webgrid-footer a:hover {
                background: #224abe;
            }

    .webgrid-selected-page {
        background: #224abe !important;
    }
</style>
