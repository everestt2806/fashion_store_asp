@model FashionStore.Models.LoaiHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <h2><i class="fas fa-info-circle me-2"></i>&nbsp Chi tiết loại hàng</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/Admin" class="text-decoration-none">
                            <i class="fas fa-home me-1"></i>&nbsp Trang chủ
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Admin/LoaiHangs" class="text-decoration-none">
                            <i class="fas fa-tags me-1"></i>&nbsp Loại hàng
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        <i class="fas fa-info-circle me-1"></i>&nbsp Chi tiết
                    </li>
                </ol>
            </nav>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="detail-label">@Html.DisplayNameFor(model => model.TenLoai)</div>
                        <div class="detail-value">@Html.DisplayFor(model => model.TenLoai)</div>
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Edit", new { id = Model.MaLoai })" class="btn btn-primary btn-lg">
                            <i class="fas fa-edit me-2"></i>&nbsp Sửa
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-light btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>&nbsp Trở về
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
