@model IEnumerable<FashionStore.Models.NhaCungCap>

@{
    ViewBag.Title = "Quản lý Nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="page-header">
        <h2><i class="fas fa-truck me-2"></i>&nbsp Quản lý Nhà cung cấp</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/Admin/Home/Index" class="text-decoration-none">
                            <i class="fas fa-home me-1"></i>&nbsp Trang chủ
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        <i class="fas fa-truck"></i>&nbsp Nhà cung cấp
                    </li>
                </ol>
            </nav>

            <div class="mb-3">
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>&nbsp Thêm nhà cung cấp mới
                </a>
            </div>

            <!-- Content -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                @Html.DisplayNameFor(model => model.TenNCC)
                                            </th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 200px;">
                                                Thao tác
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="align-middle">
                                                    <span class="text-secondary text-xs font-weight-bold">
                                                        @Html.DisplayFor(modelItem => item.TenNCC)
                                                    </span>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <div class="btn-group" role="group">
                                                        <a href="@Url.Action("Edit", new { id = item.MaNCC })"
                                                           class="btn btn-warning btn-sm" title="Sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a href="@Url.Action("Details", new { id = item.MaNCC })"
                                                           class="btn btn-info btn-sm" title="Chi tiết">
                                                            <i class="fas fa-info-circle"></i>
                                                        </a>
                                                        <a href="@Url.Action("Delete", new { id = item.MaNCC })"
                                                           class="btn btn-danger btn-sm" title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <style>

            .table.table-hover.table-bordered th,
            .table.table-hover.table-bordered thead tr th {
                color: white !important;
                font-weight: bold !important;
            }

            .custom-table th {
                color: white !important;
            }

                .custom-table th a {
                    color: white !important;
                }

            .page-header {
                background: linear-gradient(135deg, #4e73df, #224abe);
                padding: 1.5rem;
                border-radius: 0.5rem;
                margin-bottom: 2rem;
            }

                .page-header h2 {
                    color: white;
                    margin: 0;
                    font-size: 1.75rem;
                }

            .breadcrumb {
                background: #f8f9fa;
                padding: 15px;
                border-radius: 5px;
                margin-bottom: 25px;
            }

            .breadcrumb-item a {
                color: #4e73df;
            }

            .search-container .input-group {
                max-width: 600px;
            }

            .table th {
                background-color: #4e73df !important;
            }

            .alternating-row {
                background-color: rgba(0,0,0,.05);
            }

            .btn-group .btn {
                margin: 0 2px;
            }

            .webgrid-footer {
                padding: 1rem 0;
                text-align: center;
            }

                .webgrid-footer a {
                    padding: 0.5rem 1rem;
                    margin: 0 0.25rem;
                    background: #4e73df;
                    color: white;
                    border-radius: 0.25rem;
                    text-decoration: none;
                }

                    .webgrid-footer a:hover {
                        background: #224abe;
                    }

            .webgrid-selected-page {
                background: #224abe !important;
            }
        </style>
