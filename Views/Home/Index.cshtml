@{
    ViewBag.Title = "Trendy";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
}
@using FashionStore.Models;

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- Google fonts-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Header Styles */
        header {
            background-color: #333;
            color: white;
            padding: 10px;
        }

            header img {
                max-width: 100%;
                height: auto;
            }

        /* Featured Images Styles */
        .spnoibat {
            margin-top: 20px;
        }

            .spnoibat img {
                border: 2px solid #ddd;
                border-radius: 8px;
                margin-bottom: 15px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

                .spnoibat img:hover {
                    transform: scale(1.05);
                    transition: transform 0.3s ease-in-out;
                }

        /* Centered Content Styles */
        .text-center {
            text-align: center;
        }

        /* Responsive Design */
        img.img-responsive {
            max-width: 100%;
            height: auto;
        }

        /* Vibrant Colors */
        body {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .spnoibat img {
            animation: fadeIn 1s ease-in-out;
        }

        ul li {
            list-style-type: none;
        }

        .carousel-container {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .carousel-inner {
            max-width: 1200px;
            margin: 0 auto;
            height: 550px;
        }

        .carousel-item {
            transition: transform .6s ease-in-out;
            height: 100%;
        }

        .carousel-fade .carousel-item {
            opacity: 0;
            transition: opacity .6s ease-in-out;
        }

            .carousel-fade .carousel-item.active {
                opacity: 1;
            }

        .carousel-item img {
            max-width: 100%;
            height: auto;
            margin: auto;
        }


        /* Ẩn controls nếu không cần */
        .carousel-control-prev,
        .carousel-control-next {
            display: none;
        }

        .carousel-indicators {
            display: inline-flex;
            color: grey;
        }

        .collection {
            max-width: 1200px;
            margin: 0 auto;
        }
        .collection img {
            display: block; /* Đảm bảo ảnh không có khoảng trắng dưới cùng */
            max-width: 100%; /* Không cho ảnh vượt quá kích thước container */
            height: auto; /* Tự động điều chỉnh chiều cao để giữ tỷ lệ */
            margin: 0 auto; /* Căn giữa ảnh trong container */
        }

    </style>
    <title>Trendy Mall</title>
</head>
<body>
    <br />
    <!-- Carousel Section -->
    <!-- Carousel Section -->
    <div class="carousel-container">
        <div id="headerCarousel" class="carousel slide" data-bs-ride="carousel">
            <!-- Carousel Indicators -->
            <ol class="carousel-indicators">
                <li data-bs-target="#headerCarousel" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#headerCarousel" data-bs-slide-to="1"></li>
            </ol>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/banner_1.svg" alt="Slide 1" class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/banner_2.svg" alt="Slide 2" class="d-block w-100">
                </div>
            </div>
        </div>
    </div>

    <br />

    <!-- Featured Products Section -->
    <div class="spnoibat">
        <center>
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Images/" class="img-responsive" alt="" />
                </div>
                <div class="col-md-4">
                    <img src="~/Images/" class="img-responsive" alt="" />
                </div>
                <div class="col-md-4">
                    <img src="~/Images/" class="img-responsive" alt="" />
                </div>
            </div>
        </center>
    </div>
    <br />

    <!-- Product Sections -->
    @Html.Action("SanPhamBanChay", "Sanpham")
    @Html.Action("VayDamBestSeller", "Sanpham")
    @Html.Action("QuanBestSeller", "Sanpham")

    <div class="bg-body py-0">
        <div class="collection">
            <div class="col-lg-12 col-md-8">
                <img src="~/Images/banner_4.svg" style="display: block; max-width: 100%; height: auto; margin: 0 auto;" />
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var myCarousel = new bootstrap.Carousel(document.querySelector('#headerCarousel'), {
                interval: 3500,
                wrap: true,
                pause: false
            });
        });
    </script>
</body>
</html>
