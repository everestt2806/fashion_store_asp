@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
}

<style>
    .contact-page { 
        color: #333333;
    }

        .contact-page .contact-section {
            background-color: #f8f9fa;
            padding: 60px 0;
        }

        .contact-page .section-title {
            color: #003366;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 40px;
            text-align: center;
            position: relative;
        }

            .contact-page .section-title:after {
                content: '';
                display: block;
                width: 50px;
                height: 3px;
                background: #003366;
                margin: 15px auto;
            }

        .contact-page .contact-info-box {
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            transition: transform 0.3s ease;
        }

            .contact-page .contact-info-box:hover {
                transform: translateY(-5px);
            }

        .contact-page .contact-icon {
            font-size: 2.5rem;
            color: #003366;
            margin-bottom: 20px;
        }

        .contact-page .contact-form {
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .contact-page .form-control {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .contact-page .btn-submit {
            background: #003366;
            color: #ffffff;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .contact-page .btn-submit:hover {
                background: #004080;
                transform: translateY(-2px);
            }

        .contact-page .social-links {
            margin-top: 30px;
        }

            .contact-page .social-links a {
                display: inline-block;
                width: 40px;
                height: 40px;
                background: #003366;
                color: #ffffff;
                text-align: center;
                line-height: 40px;
                border-radius: 50%;
                margin: 0 10px;
                transition: all 0.3s ease;
            }

                .contact-page .social-links a:hover {
                    background: #004080;
                    transform: translateY(-3px);
                }

        .contact-page .map-container {
            height: 400px;
            border-radius: 10px;
            overflow: hidden;
            margin-top: 30px;
        }
</style>

<main class="contact-page">
    <!-- Thêm class cha ở đây -->
    <div class="contact-section">
        <div class="container">
            <h2 class="section-title">Liên Hệ Với Chúng Tôi</h2>

            <div class="row">
                <!-- Thông tin liên hệ -->
                <div class="col-md-4">
                    <div class="contact-info-box">
                        <i class="fas fa-map-marker-alt contact-icon"></i>
                        <h3>Địa Chỉ</h3>
                        <p>1168/9 Lê Văn Lương<br>Phước Kiển, Nhà Bè<br>TP. Hồ Chí Minh</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="contact-info-box">
                        <i class="fas fa-phone-alt contact-icon"></i>
                        <h3>Điện Thoại</h3>
                        <p>Hotline: 0384809098<br>Hỗ trợ: 0384809098</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="contact-info-box">
                        <i class="fas fa-envelope contact-icon"></i>
                        <h3>Email</h3>
                        <p>Support: everestt2806@gmail.com<br>Sales: sales@everest.com</p>
                    </div>
                </div>
            </div>

            <!-- Form liên hệ -->
            <div class="row mt-5">
                <div class="col-md-6">
                    <div class="contact-form">
                        <h3 class="mb-4">Gửi Tin Nhắn Cho Chúng Tôi</h3>
                        <form>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Họ và tên">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="tel" class="form-control" placeholder="Số điện thoại">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" rows="5" placeholder="Nội dung tin nhắn"></textarea>
                            </div>
                            <button type="submit" class="btn btn-submit">Gửi Tin Nhắn</button>
                        </form>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="contact-info-box">
                        <h3 class="mb-4">Giờ Làm Việc</h3>
                        <ul class="list-unstyled">
                            <li><strong>Thứ 2 - Thứ 6:</strong> 8:00 AM - 9:00 PM</li>
                            <li><strong>Thứ 7:</strong> 9:00 AM - 8:00 PM</li>
                            <li><strong>Chủ nhật:</strong> 10:00 AM - 6:00 PM</li>
                        </ul>

                        <h3 class="mt-4 mb-3">Kết Nối Với Chúng Tôi</h3>
                        <div class="social-links">
                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bản đồ -->
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3920.5721789914533!2d106.70814937480611!3d10.693281889615614!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f7c8d19b68d%3A0x2165c7ded9e6d724!2zMTE2OC85IEzDqiBWxINuIEzGsMahbmcsIFBoxrDhu5tjIEtp4bq_biwgTmjDoCBCw6gsIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1708347016170!5m2!1svi!2s"
                        width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</main>

@section scripts {
    <script>
        $(document).ready(function () {
            $('form').submit(function (e) {
                e.preventDefault();
                alert('Cảm ơn bạn đã liên hệ với chúng tôi!');
            });
        });
    </script>
}
