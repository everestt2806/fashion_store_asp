@model IEnumerable<FashionStore.Models.ChiTietDonHang>

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
    decimal tongTien = 0;
    if (Model != null && Model.Any())
    {
        tongTien = Model.Sum(x => x.ThanhTien ?? 0);
    }
}

<style>
    .order-details-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 30px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .order-details-title {
        color: #2c3e50;
        text-align: center;
        font-size: 28px;
        margin-bottom: 30px;
        font-weight: 600;
        position: relative;
        padding-bottom: 15px;
    }

        .order-details-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: #2c3e50;
        }

    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .details-table th {
            background: #f8f9fa;
            color: #2c3e50;
            font-weight: 600;
            padding: 15px;
            text-align: left;
            border-bottom: 2px solid #dee2e6;
        }

        .details-table td {
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            vertical-align: middle;
        }

        .details-table tr:hover {
            background-color: #f8f9fa;
        }

    .product-name {
        color: #2c3e50;
        font-weight: 500;
    }

    .quantity {
        color: #34495e;
        font-weight: 500;
    }

    .price {
        color: #e74c3c;
        font-weight: 500;
    }

    .total {
        color: #e74c3c;
        font-weight: 600;
    }

    .order-summary {
        margin-top: 30px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
        text-align: right;
    }

    .total-amount {
        font-size: 24px;
        color: #e74c3c;
        font-weight: 600;
    }

    .total-label {
        color: #2c3e50;
        font-size: 18px;
        margin-right: 15px;
    }

    .back-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 25px;
        background: #2c3e50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background: #bb8555;
            transform: translateY(-2px);
            color: white;
        }

    .empty-message {
        text-align: center;
        padding: 30px;
        color: #7f8c8d;
        font-size: 18px;
    }
</style>

<div class="order-details-container">
    <h2 class="order-details-title">Chi tiết đơn hàng</h2>

    @if (Model.Any())
    {
        <table class="details-table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="product-name">
                            @Html.DisplayFor(modelItem => item.SanPham.TenSP)
                        </td>
                        <td class="quantity">
                            @Html.DisplayFor(modelItem => item.SoLuong)
                        </td>
                        <td class="price">
                            @String.Format("{0:0,0}", item.DonGia) VNĐ
                        </td>
                        <td class="total">
                            @String.Format("{0:0,0}", item.ThanhTien) VNĐ
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="order-summary">
            <span class="total-label">Tổng tiền:</span>
            <span class="total-amount">@String.Format("{0:0,0}", tongTien) VNĐ</span>
        </div>
    }
    else
    {
        <div class="empty-message">
            Không có chi tiết đơn hàng
        </div>
    }

    <div style="text-align: center;">
        <a href="@Url.Action("Index")" class="back-button">
            <i class="fa fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
