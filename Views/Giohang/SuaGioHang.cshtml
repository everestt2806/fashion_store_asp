@using FashionStore.Models;
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
}

<style>
    .cart-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
    }

    .cart-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .cart-title {
        color: #003366;
        font-size: 28px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .cart-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

        .cart-table th {
            background-color: #003366;
            color: white;
            padding: 15px;
            font-weight: 500;
        }

        .cart-table td {
            padding: 15px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .cart-table tr:hover {
            background-color: #f8f9fa;
        }

    .product-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 5px;
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.1);
        }

    .quantity-input {
        width: 80px;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 5px;
        text-align: center;
    }

    .btn-update {
        background-color: #28a745;
        color: white;
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 10px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .btn-update:hover, .btn-delete:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .price {
        color: #e74c3c;
        font-weight: 600;
    }

    .actions-cell {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .delete-link {
        color: white;
        text-decoration: none;
    }

        .delete-link:hover {
            color: white;
            text-decoration: none;
        }
</style>

<div class="cart-container">
    <div class="cart-header">
        <h2 class="cart-title">
            Chỉnh sửa giỏ hàng
            <i class="fa fa-shopping-cart"></i>
        </h2>
    </div>

    <table class="cart-table">
        <thead>
            <tr>
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.iMasp</td>
                    <td>@item.sTensp</td>
                    <td>
                        <img src="@Url.Action("GetProductImage", "Sanpham", new { imageName = item.sAnhBia })"
                             class="img-responsive product-image"
                             alt="@item.sTensp" />
                    </td>
                    <td class="price">@String.Format("{0:0,0}", item.dDonGia) VNĐ</td>
                    @using (Html.BeginForm("CapNhatGioHang", "Giohang", new { @iMaSP = item.iMasp }))
                    {
                        <td>
                            @Html.TextBox("txtSoLuong", item.iSoLuong, new { @class = "quantity-input" })
                        </td>
                        <td class="price">@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
                        <td class="actions-cell">
                            <button type="submit" class="btn-update">
                                <i class="fa fa-refresh"></i> Cập nhật
                            </button>
                            <a href="@Url.Action("XoaGioHang", new { @iMaSP = item.iMasp })"
                               class="btn-delete">
                                <i class="fa fa-trash"></i> Xóa
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
