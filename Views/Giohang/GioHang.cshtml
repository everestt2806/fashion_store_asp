@using FashionStore.Models;
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
}

<style>
    .cart-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
    }

    .cart-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .cart-title {
        color: #003366;
        font-size: 28px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .cart-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

        .cart-table th {
            background-color: #003366;
            color: white;
            padding: 15px;
            font-weight: 500;
        }

        .cart-table td {
            padding: 20px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .cart-table tr:hover {
            background-color: #f8f9fa;
        }

    .product-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 5px;
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.1);
        }

    .price {
        color: #e74c3c;
        font-weight: 600;
    }

    .quantity {
        font-weight: 600;
        color: #003366;
    }

    .cart-actions {
        padding: 20px;
        text-align: right;
        background: #f8f9fa;
    }

    .btn-edit {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        margin-right: 10px;
        transition: all 0.3s ease;
    }

    .btn-order {
        background-color: #003366;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-edit:hover, .btn-order:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .empty-cart {
        text-align: center;
        padding: 40px;
        color: #666;
    }
</style>

<div class="cart-container">
    <div class="cart-header">
        <h2 class="cart-title">
            Giỏ hàng của bạn
            <i class="fa fa-shopping-cart"></i>
        </h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Mã SP</th>
                    <th>Tên sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.iMasp</td>
                        <td>@item.sTensp</td>
                        <td>
                            <img src="@Url.Action("GetProductImage", "Sanpham", new { imageName = item.sAnhBia })"
                                 class="img-responsive product-image"
                                 alt="@item.sTensp" />
                        </td>
                        <td class="price">@String.Format("{0:0,0}", item.dDonGia) VNĐ</td>
                        <td class="quantity">@item.iSoLuong</td>
                        <td class="price">@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6" class="cart-actions">
                        <a href="@Url.Action("SuaGioHang")" class="btn-edit">
                            <i class="fa fa-edit"></i> Chỉnh sửa giỏ hàng
                        </a>
                        @using (Html.BeginForm("ThanhToanDonHang", "Giohang", FormMethod.Post, new { style = "display: inline;" }))
                        {
                            <button type="submit" class="btn-order">
                                <i class="fa fa-check"></i> Đặt hàng
                            </button>
                        }
                    </td>
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <div class="empty-cart">
            <i class="fa fa-shopping-cart fa-3x"></i>
            <h3>Giỏ hàng của bạn đang trống</h3>
            <p>Hãy thêm sản phẩm vào giỏ hàng của bạn</p>
        </div>
    }
</div>
